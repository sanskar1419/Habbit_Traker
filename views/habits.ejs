<div class="habit-content">
  <div class="new-habit-container">
    <h2 class="animate__animated animate__flipInX">
      Hurray, Want To Add New Habit ?
    </h2>
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-dark animate__animated animate__flipInX"
      data-bs-toggle="modal"
      data-bs-target="#staticBackdrop"
    >
      Add New Habit
    </button>

    <!-- Modal -->
    <div
      class="modal fade"
      id="staticBackdrop"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="staticBackdropLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">
              Modal title
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">...</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Understood</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="allHabit">
    <div class="card text-center text-bg-primary mb-3">
      <div class="card-header text-dark">
        <h6>Posted Date : 27-January-2024</h6>
        <div class="target-days-container">
          <div class="day-name-container">
            <p>Sun</p>
          </div>
          <div class="day-name-container">
            <p>Wed</p>
          </div>
          <div class="day-name-container">
            <p>Fri</p>
          </div>
        </div>
      </div>
      <div class="card-body text-dark">
        <h2 class="card-title">Meditation</h2>
        <div class="button-container">
          <button class="btn btn-dark">Mark As Complete</button>
          <a href="#" class="btn btn-dark">View History</a>
        </div>
      </div>
      <div class="card-footer text-body-secondary text-dark">
        <h6>Total Target Days : 20</h6>
        <h6>Completed : 0</h6>
      </div>
    </div>
  </div>
</div>
